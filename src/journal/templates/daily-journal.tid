title: $:/plugins/mblackman/journal/ui/templates/daily-journal
type: text/vnd.tiddlywiki

\whitespace trim
\define newline()
 
\end

<$let currentTiddler={{{ [<storyTiddler>!is[blank]else<currentTiddler>] }}}>

<<journal-nav "Daily" """
  <$let 
    weekTitle={{!!week}}
    monthTag={{!!month}}
    yearTag={{!!year}}
    tags={{{ [[Journal]] [[Weekly]] [<monthTag>] [<yearTag>] +[join[ ]] }}}
  >
    <div class="journal-header-container">
      <$macrocall $name="journal-parent-btn" target=<<weekTitle>> label=<<weekTitle>> tags=<<tags>> tooltip="Open Weekly Review" year=<<yearTag>> month=<<monthTag>> journalDate=<<now "YYYY0MM0DD120000000">> />
    </div>
  </$let>
""">>

