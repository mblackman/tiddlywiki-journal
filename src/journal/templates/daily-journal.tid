    <$macrocall $name="render-habit-widget" configTiddler=<<habitConfig>> />
  </$list>
  <$list filter="[[$:/config/Journal/EnableMedia]get[text]else[yes]!match[no]] :filter[[$:/plugins/mblackman/media-importer]!is[missing]]" variable="ignore">
